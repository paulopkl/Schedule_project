<%- include('./includes/head'); %>

<%- include('./includes/nav'); %>

<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>
        
        <div class="col-lg-8 my-3">
            <h1 class="text-center">Contact</h1>
            <p class="text-center lead">Create or edit your contact bellow!</p>

            <%- include('includes/messages'); %>

        <% if (contact._id) { %>
            <form action="/contact/edit/<%= contact._id; %>" method="POST">
        <% } else { %>
            <form action="/contact/register" method="POST">
        <% } %>
                <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                <div class="form-group my-3">
                    <label class="my-2">Name</label>
                    <input value="<%= contact.name; %>" type="text" class="form-control" name="name">
                </div>
                <div class="form-group my-3">
                    <label class="my-2">SurName</label>
                    <input value="<%= contact.surname; %>" type="text" class="form-control" name="surname">
                </div>
                <div class="form-group my-3">
                    <label class="my-2">E-mail</label>
                    <input value="<%= contact.email; %>" type="email" class="form-control" name="email">
                </div>
                <div class="form-group my-3">
                    <label class="my-2">Phone</label>
                    <input value="<%= contact.phone; %>" type="tel" class="form-control" name="phone">
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </form>
        </div>

        <div class="col-lg-2"></div>
    </div>
</div>

<%- include('./includes/footer'); %>