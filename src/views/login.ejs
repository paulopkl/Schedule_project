<%- include('./includes/head'); %>

<%- include('./includes/nav'); %>

<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>
        
        <div class="col-lg-8 my-3">
            <h1 class="text-center">Create Account or Login!</h1>
            <p class="text-center lead">Log in or create your account bellow!</p>

            <%- include('./includes/messages'); %>

            <div class="row">
                <div class="col-lg my-5">
                    <h4>Make your registration!</h4>
                    <p>If you don't have account yet, fill the form bellow:</p>

                    <form class="form-signup" action="/login/register" method="post">
                        <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                        <div class="form-group my-3">
                            <label class="my-2">Your E-mail</label>
                            <input type="email" class="form-control" name="email">
                        </div>
                        <div class="form-group my-3">
                            <label class="my-2">Your password</label>
                            <input type="password" class="form-control" name="password">
                        </div>
                        <button type="submit" class="btn btn-primary">Create my account!</button>
                    </form>
                </div>
                <div class="col-lg my-5">
                    <h4>Log In</h4>

                    <p>If you already have an account, LogIn bellow:</p>

                    <form class="form-login" action="/login/enter" method="post">
                        <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                        <div class="form-group my-3">
                            <label class="my-2">Your E-mail</label>
                            <input type="email" class="form-control" name="email">
                        </div>
                        <div class="form-group my-3">
                            <label class="my-2">Your password</label>
                            <input type="password" class="form-control" name="password">
                        </div>
                        <button type="submit" class="btn btn-primary">Enter!</button>
                    </form>
                </div>
            </div>

        </div>

        <div class="col-lg-2"></div>
    </div>
</div>

<%- include('./includes/footer'); %>